<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="16dp" >

        <com.xiaoaitouch.mom.view.XTextView
            android:id="@+id/pregnant_week_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/size_dp_18" />

        <com.xiaoaitouch.mom.view.XTextView
            android:id="@+id/week_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/pregnant_week_tv"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/size_dp_16" />
    </RelativeLayout>

    <com.xiaoaitouch.mom.view.MyGridView
        android:id="@+id/calendar_gridview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:numColumns="7"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-6dp"
        android:background="@color/white" />

</LinearLayout>