<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <com.xiaoaitouch.mom.view.XTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/guide_is_know"
        android:textColor="@color/white"
        android:textSize="@dimen/size_dp_24" />

    <com.xiaoaitouch.mom.view.XTextView
        android:id="@+id/due_know_tv"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/user_next_bg_item"
        android:gravity="center"
        android:text="@string/guide_know"
        android:textColor="@color/white"
        android:textSize="@dimen/size_dp_16" />

    <com.xiaoaitouch.mom.view.XTextView
        android:id="@+id/due_no_know_tv"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/user_next_bg_item"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/guide_no_know"
        android:textColor="@color/white"
        android:textSize="@dimen/size_dp_16" />

</LinearLayout>