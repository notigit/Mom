<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/main_right_corner_bg"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.xiaoaitouch.mom.view.XTextView
                android:id="@+id/main_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:text="2015-09-05"
                android:textColor="@color/white"
                android:textSize="@dimen/size_dp_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="38dp"
            android:background="@drawable/index_dateicon_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/index_date_icon" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>