<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/activity_top_color" >

        <ImageView
            android:id="@+id/activity_top_back_image"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/shoe_bake_icon" />

        <com.xiaoaitouch.mom.view.XTextView
            style="@style/BaseItemText"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:text="@string/activity_material"
            android:textColor="@color/white"
            android:textSize="@dimen/size_dp_20" />
    </RelativeLayout>

    <View
        style="@style/MoreHomeItemHorizontalLine"
        android:layout_marginTop="12dp" />

    <LinearLayout
        android:id="@+id/user_age_view_lay"
        style="@style/CommonItemLinearLayout" >

        <com.xiaoaitouch.mom.view.XTextView
            style="@style/BaseItemText"
            android:text="@string/mine_material_age_tv"
            app:textview_color="@color/black"
            app:textview_style="SourceHanSansCN-Light.ttf" />

        <com.xiaoaitouch.mom.view.XTextView
            android:id="@+id/user_age_tv"
            style="@style/LinearLayoutItemText"
            app:textview_style="SourceHanSansCN-Light.ttf" />

        <View style="@style/LinearLayoutRightArrow" />
    </LinearLayout>

    <View style="@style/MoreHomeItemHorizontalLine" />

    <LinearLayout
        android:id="@+id/user_height_view_lay"
        style="@style/CommonItemLinearLayout" >

        <com.xiaoaitouch.mom.view.XTextView
            style="@style/BaseItemText"
            android:text="@string/mine_material_height_tv"
            app:textview_color="@color/black"
            app:textview_style="SourceHanSansCN-Light.ttf" />

        <com.xiaoaitouch.mom.view.XTextView
            android:id="@+id/user_height_tv"
            style="@style/LinearLayoutItemText"
            app:textview_style="SourceHanSansCN-Light.ttf" />

        <View style="@style/LinearLayoutRightArrow" />
    </LinearLayout>

    <View style="@style/MoreHomeItemHorizontalLine" />

</LinearLayout>