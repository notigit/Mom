<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/main_share_card_top" >

        <com.xiaoaitouch.mom.view.RoundedImageViews
            android:id="@+id/share_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/index_recordcard_img"
            app:roundHeight="10dp"
            app:roundWidth="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical"
            android:padding="8dp" >

            <com.xiaoaitouch.mom.view.XTextView
                android:id="@+id/main_due_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8天"
                android:textSize="@dimen/size_dp_18"
                app:textview_color="#ff7999"
                app:textview_style="SourceHanSansCN-Light.ttf" />

            <com.xiaoaitouch.mom.view.XTextView
                android:id="@+id/main_weather_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/main_due_day_tv"
                android:text="15:18"
                android:textSize="@dimen/size_dp_18"
                app:textview_color="#929292"
                app:textview_style="SourceHanSansCN-Light.ttf" />

            <ImageView
                android:id="@+id/share_entrance_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="8dp"
                android:src="@drawable/record_more_icon" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_share_card_buttom"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp" >

        <com.xiaoaitouch.mom.view.XTextView
            android:id="@+id/main_share_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="前段时间我去拍的艺术照，摄影师的技术不错！"
            android:textSize="@dimen/size_dp_18"
            app:textview_color="@color/black"
            app:textview_style="SourceHanSansCN-Light.ttf" />

        <com.xiaoaitouch.mom.view.XTextView
            android:id="@+id/main_share_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_share_content_tv"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="16dp"
            android:text="重庆.立海大厦"
            android:textSize="@dimen/size_dp_18"
            app:textview_color="#ff7999"
            app:textview_style="SourceHanSansCN-Light.ttf" />

        <ImageView
            android:id="@+id/share_mood_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/record_face6_icon" />
    </RelativeLayout>

</LinearLayout>