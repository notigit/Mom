<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/share_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true" />

    <com.xiaoaitouch.mom.view.XTextView
        android:id="@+id/share_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="@string/cancle_tv"
        android:textSize="@dimen/size_dp_15"
        app:textview_color="@color/white"
        app:textview_style="SourceHanSansCN-Light.ttf" />

</RelativeLayout>

