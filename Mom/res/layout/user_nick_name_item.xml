<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/user_top_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <com.xiaoaitouch.mom.view.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_var_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/user_default_face"
                app:border_color="@color/white"
                app:border_width="2dp"
                app:corner_radius="120dp"
                app:oval="false" />

            <EditText
                android:id="@+id/user_input_nick_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/user_nikc_name_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:hint="昵称"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/size_dp_18" />
        </LinearLayout>

        <com.xiaoaitouch.mom.view.XTextView
            android:id="@+id/user_nick_next_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/user_next_bg_item"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/size_dp_18" />
    </LinearLayout>

</RelativeLayout>